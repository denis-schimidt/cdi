<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd ">

	<persistence-unit name="estudo" transaction-type="RESOURCE_LOCAL">
		<description>Unidade de persistencia do Oracle 12c, utilizando o banco de dados estudo.</description>
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>
		    com.schimidtsolutions.entity.Person
		</class>
		<properties>
			<property name="javax.persistence.schema-generation-action" value="create" />
			<property name="javax.persistence.schema-generation-target" value="database" />
			<property name="javax.persistence.jdbc.driver" value="oracle.jdbc.OracleDriver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:oracle:thin:@localhost:1521:estudo" />
			<property name="javax.persistence.jdbc.user" value="C##SYSDEV" />
			<property name="javax.persistence.jdbc.password" value="segfor47" />

			<!-- propriedades do hibernate -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
		</properties>
	</persistence-unit>
</persistence>
